{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"outDir": "./dist/",
		"noImplicitAny": false,
		"sourceMap": true,
		"target": "es5",
		"allowJs": true,
		"lib": [
			"es2015",
			"dom"
		]
	},
	"typeAcquisition": {
		"enable": true
	},
	"exclude": [
		"node_modules",
		"coverage",
		"dist"
	]
}