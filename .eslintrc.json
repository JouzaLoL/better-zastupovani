{
	"env": {
		"es6": true,
		"jest": true,
		"browser": true,
		"commonjs": true,
		"node": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 8
	},
	"rules": {
		"space-before-function-paren": "off",
		"eol-last": "off",
		"no-var": "off",
		"comma-dangle": "off",
		"new-cap": "off",
		"max-len": "off",
		"valid-jsdoc": "off",
		"quotes": "off",
		"no-shadow": "error",
		"object-curly-spacing": "off",
		"no-invalid-this": "off",
		"no-constant-condition": "off",
		"comma-spacing": "off",
		"semi": "error",
		"no-console": "off",
		"indent": [
			"error",
			"tab"
		],
		"no-tabs": "off"
	}
}
